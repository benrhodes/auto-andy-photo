<g xmlns="http://www.w3.org/2000/svg">
   {{#if outerLeft}}
      <rect transform="translate({{outerLeft}}, {{outerTop}})" width="{{outerWidth}}" height="{{outerHeight}}" fill="#CCCCCC"/>
   {{/if}}
   <path fill="{{renderColor}}" d="{{bodyPath}}"/>
   <g transform="translate({{faceXPos}},{{faceYPos}}) scale({{faceScale}}) rotate({{faceRotation}})">
      <path fill="{{faceColor}}" d="{{facePath}}"/>
   </g>
   {{#if centerX}}
      <circle cx="{{centerX}}" cy="{{centerY}}" r="8" fill="#000000"/>
   {{/if}}
</g>